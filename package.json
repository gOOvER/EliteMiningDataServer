{
  "name": "elite-mining-data-server",
  "version": "1.0.0",
  "description": "Node.js server for Elite Dangerous mining data aggregation from EDDN, Inara, and EDSM",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "npm run test:check-env && npm run test:unit && npm run test:integration",
    "test:check-env": "node scripts/check-test-env.js",
    "test:unit": "jest tests/unit --coverage --ci --watchAll=false",
    "test:integration": "jest tests/integration --ci --watchAll=false --forceExit",
    "test:e2e": "jest tests/e2e --ci --watchAll=false --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:memory-leaks": "echo 'Memory leak tests not yet implemented' && exit 0",
    "test:load": "jest tests/load --ci --watchAll=false --forceExit --testTimeout=60000",
    "test:load:k6": "k6 run tests/load/api-load-test.js",
    "test:load:k6:short": "k6 run --duration=30s --vus=10 tests/load/api-load-test.js",
    "wait-for-services": "node scripts/wait-for-services.js",
    "health-check": "node scripts/health-check.js",
    "type-check": "echo 'TypeScript type checking not configured (JavaScript project)' && exit 0",
    "security:audit": "npm audit --audit-level=moderate",
    "docker:build": "docker build -t elite-mining-server:latest .",
    "docker:build:scan": "docker build -t elite-mining-server:scan .",
    "docker:build:prod": "docker build -t elite-mining-server:production --target production .",
    "docker:run": "docker run -d -p 3000:3000 --name elite-mining-server elite-mining-server:latest",
    "docker:run:dev": "docker run -d -p 3000:3000 -v $(pwd)/src:/app/src --name elite-mining-server-dev elite-mining-server:latest",
    "docker:stop": "docker stop elite-mining-server || true",
    "docker:clean": "docker stop elite-mining-server || true && docker rm elite-mining-server || true",
    "docker:logs": "docker logs -f elite-mining-server",
    "docker:shell": "docker exec -it elite-mining-server sh",
    "clean": "rm -rf node_modules dist coverage logs/*.log",
    "setup": "npm install && npm run docker:build",
    "deploy:staging": "npm run build && npm run docker:build && docker tag elite-mining-server:latest elite-mining-server:staging",
    "deploy:production": "npm run build && npm run docker:build:prod",
    "reset": "npm run clean && npm install",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:analyze": "webpack --env analyze --mode production",
    "bundle:size": "npm run build && node scripts/analyze-bundle.js",
    "bundle:report": "npm run build:analyze && echo 'Bundle analysis report generated: dist/bundle-report.html'",
    "serve:built": "node dist/server.js"
  },
  "keywords": [
    "elite-dangerous",
    "mining",
    "eddn",
    "inara",
    "edsm",
    "api",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "redis": "^4.7.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zeromq": "^6.0.0-beta.19",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-loader": "^10.0.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "webpack": "^5.102.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
