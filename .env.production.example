# Environment variables for production deployment
# Copy this file to .env.production and update the values

# Application configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database configuration
MONGODB_USERNAME=elitemining
MONGODB_PASSWORD=your-secure-password-here
MONGODB_DATABASE=elitemining
MONGODB_CONNECTION_STRING=mongodb://elitemining:your-secure-password-here@mongodb:27017/elitemining

# API Keys (get these from respective services)
INARA_API_KEY=your-inara-api-key
EDSM_API_KEY=your-edsm-api-key

# Security configuration
JWT_SECRET=your-jwt-secret-key-here
CORS_ORIGIN=https://elite-mining.yourdomain.com

# CrowdSec configuration
CROWDSEC_BOUNCER_API_KEY=your-crowdsec-bouncer-api-key

# Monitoring (optional)
GRAFANA_PASSWORD=your-grafana-password

# Domain configuration for Traefik
DOMAIN=yourdomain.com
TRAEFIK_DOMAIN=traefik.yourdomain.com
ELITE_MINING_DOMAIN=elite-mining.yourdomain.com
CROWDSEC_DOMAIN=crowdsec.yourdomain.com

# Email for Let's Encrypt certificates
ACME_EMAIL=your-email@yourdomain.com

# Basic auth for admin interfaces (generate with htpasswd)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2y$10$...  # Generate with: htpasswd -nbB admin yourpassword