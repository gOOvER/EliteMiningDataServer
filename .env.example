# Elite Mining Data Server Environment Configuration
# Updated for Node.js LTS and MongoDB 8.0

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (MongoDB 8.0)
MONGODB_URI=mongodb://localhost:27017/elite_mining
MONGODB_DB_NAME=elite_mining
MONGODB_MAX_CONNECTIONS=100
MONGODB_BUFFER_MAX_ENTRIES=0

# EDDN Configuration
EDDN_RELAY_URL=tcp://eddn.edcd.io:9500
EDDN_RECONNECT_INTERVAL=30000

# Inara API Configuration
INARA_API_URL=https://inara.cz/inapi/v1/
INARA_API_KEY=your_inara_api_key_here
INARA_APP_NAME=EliteMiningDataServer
INARA_APP_VERSION=1.0.0

# EDSM API Configuration
EDSM_API_URL=https://www.edsm.net/api-v1/
EDSM_API_KEY=your_edsm_api_key_here

# Cache Configuration
CACHE_DURATION_MINUTES=15
MAX_CACHE_ENTRIES=10000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100